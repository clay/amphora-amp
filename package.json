{
  "name": "amphora-amp",
  "version": "1.0.1",
  "description": "An AMPHTML renderer for component data",
  "main": "index.js",
  "scripts": {
    "test": "npm run eslint && npm run jest -- --coverage --no-cache",
    "eslint": "eslint --max-warnings 0 lib test",
    "jest": "jest"
  },
  "dependencies": {
    "amphora-fs": "^1.0.1",
    "bluebird": "^3.5.0",
    "clay-log": "^1.3.1",
    "clayhandlebars": "^3.2.2",
    "clayutils": "^2.6.0",
    "glob": "^7.1.1",
    "handlebars": "^4.0.6",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "coveralls": "^3.0.2",
    "eslint": "^4.18.2",
    "jest": "23.6.0"
  },
  "jest": {
    "clearMocks": true,
    "restoreMocks": true,
    "collectCoverageFrom": [
      "<rootDir>/lib/**/*.js"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "setupFiles": [
      "<rootDir>/test/setupFile.js"
    ],
    "moduleNameMapper": {
      "\\.(hbs)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clay/amphora-amp.git"
  },
  "author": "",
  "license": "MIT"
}
